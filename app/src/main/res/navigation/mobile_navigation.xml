<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.lifecapable.vehicle.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_viewDetailsFragment"
            app:destination="@id/viewDetailsFragment" />
    </fragment>

<!--    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.lifecapable.vehicle.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />-->

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.lifecapable.vehicle.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/viewDetailsFragment"
        android:name="com.lifecapable.vehicle.ui.home.ViewDetailsFragment"
        android:label="fragment_view_details"
        tools:layout="@layout/fragment_view_details" >
        <action
            android:id="@+id/action_viewDetailsFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpToInclusive="true"
            app:popUpTo="@id/navigation_home"/>
    </fragment>
</navigation>
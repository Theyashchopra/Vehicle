<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="200dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header"
                android:background="@android:color/holo_orange_dark"
                android:text="SEARCH FILTER"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:elevation="8dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/filter_content"
                android:layout_width="match_parent"
                android:layout_below="@id/header"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/filtercat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="@id/imagsub"
                    app:layout_constraintBottom_toBottomOf="@id/imagsub"
                    app:layout_constraintStart_toStartOf="parent" />
                <ImageView
                    android:id="@+id/imagsub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintTop_toTopOf="@id/filtercat"
                    app:layout_constraintStart_toEndOf="@id/filtercat"/>
                <TextView
                    android:id="@+id/filtersubcat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filters"
                    app:layout_constraintStart_toEndOf="@id/imagsub"
                    app:layout_constraintTop_toTopOf="@id/imagsub"
                    app:layout_constraintBottom_toBottomOf="@id/imagsub"/>
                <TextView
                    android:id="@+id/nowtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Only show Available Vehicles"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@id/imagsub"
                    app:layout_constraintStart_toStartOf="parent"/>
                <CheckBox
                    android:id="@+id/filterchecknow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/nowtxt"
                    app:layout_constraintTop_toTopOf="@id/nowtxt"
                    app:layout_constraintBottom_toBottomOf="@id/nowtxt"/>
                <TextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AND"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@id/nowtxt"
                    app:layout_constraintStart_toStartOf="@id/nowtxt"
                    app:layout_constraintEnd_toEndOf="@id/filterchecknow"/>
                <TextView
                    android:id="@+id/ffrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="@id/filterfromdate"
                    app:layout_constraintBottom_toBottomOf="@id/filterfromdate"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/filterfromdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/1/3003 "
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/background_border"
                    app:layout_constraintTop_toBottomOf="@id/or"
                    app:layout_constraintStart_toEndOf="@id/ffrom"/>
                <TextView
                    android:id="@+id/fto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_margin="8dp"
                    app:layout_constraintStart_toEndOf="@id/filterfromdate"
                    app:layout_constraintTop_toTopOf="@id/filterfromdate"
                    app:layout_constraintBottom_toBottomOf="@id/filterfromdate"/>
                <TextView
                    android:id="@+id/filtertodate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/1/3003 "
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/background_border"
                    app:layout_constraintTop_toBottomOf="@id/or"
                    app:layout_constraintStart_toEndOf="@id/fto"/>

                <TextView
                    android:id="@+id/modeltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model "
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@id/filtermodelspinner"
                    app:layout_constraintBottom_toBottomOf="@id/filtermodelspinner"
                    app:layout_constraintStart_toStartOf="parent"/>
                <Spinner
                    android:id="@+id/filtermodelspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/filterfromdate"
                    app:layout_constraintStart_toEndOf="@id/modeltxt"/>

                <TextView
                    android:id="@+id/filterpdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Day Rent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@id/filtermodelspinner"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/filterperdayrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs0 - Rs500000"
                    android:textColor="@android:color/black"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@id/filtermodelspinner"
                    app:layout_constraintStart_toEndOf="@id/filterpdr"/>
                <it.sephiroth.android.library.rangeseekbar.RangeSeekBar
                    android:id="@+id/filtercostrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    style="@style/Base.Sephiroth.Widget.RangeSeekBar"
                    app:layout_constraintTop_toBottomOf="@id/filterpdr"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search"
                android:layout_below="@id/filter_content"
                android:layout_margin="8dp"
                android:layout_centerHorizontal="true"
                android:text="GO"/>
        </RelativeLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
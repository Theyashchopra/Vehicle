<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.home.HomeFragment"
    app:layoutDescription="@xml/fragment_home_scene">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:elevation="8dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:id="@+id/main_progress"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:elevation="10dp"
        android:id="@+id/home_progress"/>
    <ImageView
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_pin"
        android:elevation="4dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/homesearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:defaultQueryHint="Search location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:background="@drawable/background_edittext"/>
        <!-- Bottom card 1 -->
    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/home_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Select a Vehicle type"
            android:textAlignment="center" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_margin="8dp"
            android:layout_gravity="center">
           <!-- add your master vehicles here-->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layoutAnimation="@anim/layout_animation"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_margin="8dp"
                android:id="@+id/master_vehicle"/>
        </HorizontalScrollView>
    </LinearLayout>
        <!-- Bottom card 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_cl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/home_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/backimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the vehicle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/backimage"
            app:layout_constraintBottom_toBottomOf="@id/backimage"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homerecycle2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layoutAnimation="@anim/layout_animation"
            android:layout_margin="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/card_home"
            app:layout_constraintTop_toBottomOf="@id/backimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Bottom card 3 -->
    <RelativeLayout
        android:id="@+id/bottom_rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/home_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/backimage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_arrow_back"/>
        <ImageView
            android:id="@+id/arrowup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_up"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/textswipeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on arrow to see results in a list"
            android:textColor="@android:color/black"
            android:layout_below="@id/arrowup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textswipeup">
            <TextView
                android:id="@+id/resultsof3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Results of " />
            <TextView
                android:id="@+id/typetv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xyz"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </RelativeLayout>
    <!-- Bottom driver list -->
    <RelativeLayout
       android:id="@+id/driverlistrl"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:clickable="true"
       android:focusable="true"
       android:focusableInTouchMode="true"
       android:background="@android:color/white"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:visibility="gone">
       <ImageView
           android:id="@+id/downarrow"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/ic_arrow_down"
           android:layout_margin="8dp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentTop="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/driverrecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/card_driver"
                android:layoutAnimation="@anim/layout_animation"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/downarrow"/>
   </RelativeLayout>
    <!-- Filter Driver View -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filtercl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="16dp"
        android:focusable="true"
        android:visibility="gone"
        android:focusableInTouchMode="true"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/backimagefilter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/addfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Filters"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/backimagefilter"
            app:layout_constraintBottom_toBottomOf="@id/backimagefilter"/>
        <TextView
            android:id="@+id/filtercat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/imagsub"
            app:layout_constraintBottom_toBottomOf="@id/imagsub"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/imagsub"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintTop_toBottomOf="@id/backimagefilter"
            app:layout_constraintStart_toEndOf="@id/filtercat"/>
        <TextView
            android:id="@+id/filtersubcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sub"
            app:layout_constraintStart_toEndOf="@id/imagsub"
            app:layout_constraintTop_toTopOf="@id/imagsub"
            app:layout_constraintBottom_toBottomOf="@id/imagsub"/>
        <TextView
            android:id="@+id/nowtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only show available Now"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/imagsub"
            app:layout_constraintStart_toStartOf="parent"/>
        <CheckBox
            android:id="@+id/filterchecknow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/nowtxt"
            app:layout_constraintTop_toTopOf="@id/nowtxt"
            app:layout_constraintBottom_toBottomOf="@id/nowtxt"/>
        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/nowtxt"
            app:layout_constraintStart_toStartOf="@id/nowtxt"
            app:layout_constraintEnd_toEndOf="@id/filterchecknow"/>
        <TextView
            android:id="@+id/ffrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/filterfromdate"
            app:layout_constraintBottom_toBottomOf="@id/filterfromdate"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/filterfromdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/1/3003 "
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:background="@drawable/background_border"
            app:layout_constraintTop_toBottomOf="@id/or"
            app:layout_constraintStart_toEndOf="@id/ffrom"/>
        <TextView
            android:id="@+id/fto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/filterfromdate"
            app:layout_constraintTop_toTopOf="@id/filterfromdate"
            app:layout_constraintBottom_toBottomOf="@id/filterfromdate"/>
        <TextView
            android:id="@+id/filtertodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/1/3003 "
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:background="@drawable/background_border"
            app:layout_constraintTop_toBottomOf="@id/or"
            app:layout_constraintStart_toEndOf="@id/fto"/>

        <TextView
            android:id="@+id/modeltxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model "
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/filtermodelspinner"
            app:layout_constraintBottom_toBottomOf="@id/filtermodelspinner"
            app:layout_constraintStart_toStartOf="parent"/>
        <Spinner
            android:id="@+id/filtermodelspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/filterfromdate"
            app:layout_constraintStart_toEndOf="@id/modeltxt"/>

        <TextView
            android:id="@+id/filterpdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Per Day Rent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/filtermodelspinner"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/filterperdayrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs0 - Rs1000"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/filtermodelspinner"
            app:layout_constraintStart_toEndOf="@id/filterpdr"/>
        <it.sephiroth.android.library.rangeseekbar.RangeSeekBar
            android:id="@+id/filtercostrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            style="@style/Base.Sephiroth.Widget.RangeSeekBar"
            app:layout_constraintTop_toBottomOf="@id/filterpdr"/>

        <!-- end here -->
        <Button
            android:id="@+id/filtersearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/background_accent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>